- model_class = Translantion
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:original) + ':'
  %br
  = @translantion.original
%p
  %strong= model_class.human_attribute_name(:translated) + ':'
  %br
  = @translantion.translated

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), translantions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_translantion_path(@translantion), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), translantion_path(@translantion), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
